{

  "manifest_version": 2,
  "name": "PRAWn",
  "version": "1.0",

  "description": "Detects the stance of commenters towards objects in Reddit articles",

  "icons": {
    "64": "icons/shrimp-64.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/r/*"],
      "js": ["prawnz.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/shrimp-64.png",
    "default_title": "PRAWn",
    "default_popup": "popup/prawn.html"
  }

  // "background": {
  //   "scripts": [
  //     "prawn.js",
  //     "dataviz.js",
  //     "Chart.min.js"
  //   ]
  // }

}